<div class="container mt-5 mb-5">
<h1>Add a new task</h1>

<div class="card shadow-sm">
  <div class="card-body">

<%= form_with model: @task do |f| %>
<div class="list-group-item justify-content-between align-items-center mb-3">
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class="list-group-item justify-content-between align-items-center mb-3">
  <%= f.label :details, class: "form-label" %>
  <%= f.text_field :details, class: "form-control" %>
</div>

<div class="list-group-item justify-content-between align-items-center mb-3">
  <%= f.label :completed, class: "form-check-label" %>
  <%= f.check_box :completed, class: "form-check-input"%>
</div>

  <%= f.submit class: "btn btn-primary"%>
<% end %>
</div>
</div>
</div>>
