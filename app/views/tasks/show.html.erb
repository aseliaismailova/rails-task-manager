<div class="container mt-5 mb-5">

  <h2 class="mb-4"><%= @task.title %></h2>

  <div class="card shadow-sm mb-4">
    <div class="card-body">

      <p class="mb-3"><strong>Details:</strong></p>

      <div class="p-3 mb-4 bg-light rounded border">
        <%= @task.details %>
      </div>

      <p class="mt-3">
        <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
      </p>

    </div>
  </div>

  <div class="d-flex gap-3">
    <%= link_to "Back to list", tasks_path, class: "btn btn-secondary" %>

    <%= link_to "Edit task", edit_task_path(@task), class: "btn btn-primary" %>

    <%= link_to "Delete",
      task_path(@task),
      class: "btn btn-danger",
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      }
    %>
  </div>

</div>
